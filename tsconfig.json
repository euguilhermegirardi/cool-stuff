{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "src/*": ["./src/*"],
      "assets/*": ["./assets/*"],
      "assets": ["./assets"],
      // We define this path for all files/folders inside
      // components folder:
      "components/*": ["./components/*"],
      // We define this path for the index.ts file inside the
      // components folder:
      "components": ["./components"],
      "context/*": ["./context/*"],
      "context": ["./context"],
      "hooks/*": ["./hooks/*"],
      "hooks": ["./hooks"],
      "pages/*": ["./pages/*"],
      "pages": ["./pages"],
      "providers/*": ["./providers/*"],
      "providers": ["./providers"],
      "routes/*": ["./routes/*"],
      "routes": ["./routes"],
      "services/*": ["./services/*"],
      "services": ["./services"],
      "shared/*": ["./shared/*"],
      "shared": ["./shared"],
      "theme/*": ["./theme/*"],
      "theme": ["./theme"],
      "utils/*": ["./utils/*"],
      "utils": ["./utils"]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": ["src", "tests/setup.ts", "custom.d.ts"],
  "exclude": ["node_modules", "build"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
